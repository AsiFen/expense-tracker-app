<div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-4">Filter Expenses by Category</h1>
    <form action="/filterExpense" method="post" class="mb-4">
        <label for="category_chosen" class="block mb-2">Choose a category:</label>
        <div class="relative">
            <select id="category_chosen" name="category_chosen" class="block w-full px-4 py-2 border rounded-md appearance-none focus:outline-none focus:border-blue-500">
                {{#each categories}}
                    <option value="{{this.category_type}}">{{this.category_type}}</option>
                {{/each}}
            </select>
            <span class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
            </span>
        </div>
        <button type="submit" class="mt-2 px-4 py-2 bg-blue-500 text-white rounded-md">Filter</button>
    </form>

    {{#if filteredExpenses}}
        <h2 class="text-xl font-bold mb-2">Filtered Expenses for Category: {{selectedCategory}}</h2>
        <table class="border border-gray-300">
            <thead>
                <tr class="bg-gray-100">
                    <th class="py-2 px-4">Expense</th>
                </tr>
            </thead>
            <tbody>
                {{#each filteredExpenses}}
                    <tr>
                        {{#each this}}
                        <td class="py-2 px-4">{{this.expense}}</td>
                        {{/each}}
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{/if}}
</div>
